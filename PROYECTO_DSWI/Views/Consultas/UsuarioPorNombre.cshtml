@using PROYECTO_DSWI.Models;
@model IEnumerable<UsuarioLista>
@{
    ViewBag.Title = "UsuarioPorNombre";
}
<style>
    .btn {
        background-color: #ffffff;
        color: black;
        border-color: black;
        margin-left: 5px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

        .btn:hover {
            background-color: #68c1c1;
            color: black;
            border-color: black;
            margin-left: 5px;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

    img {
        margin-left: 5px;
        margin-bottom: 1px;
        width: 20px;
        height: 20px;
    }

    .subtitulo {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .titulo {
        padding-top: 5px;
        padding-bottom: 10px;
        color: black;
        font-size: 30px;
        text-align: left;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    .contenedor-navegador {
        display: flex;
    }

    .contenedor-sec {
        margin-top: 30px;
    }

    table {
        border-collapse: separate;
        border-spacing: 10;
        border: solid black 1px;
        border-radius: 10px;
        -moz-border-radius: 10px;
        -webkit-border-radius: 5px;
    }
</style>

<div class="contenedor-navegador">
    <h3 class="mt-4 titulo">CONSULTA DE USUARIOS POR NOMBRE</h3>
</div>

<hr style="border: solid 1px black" />

<div class="contenedor-sec">
    @using (Html.BeginForm())
    {
        <div>
            <p class="subtitulo" style="display: inline-block;">Ingresar nombre del usuario : </p>
            @Html.TextBox("nombre", "", new { style = "display: inline-block; margin-left: 10px;" })
            <button style="display: inline-block;" class="btn btn-success">Consultar <img src="~/Imagenes/Logos/lupa.png" /></button>
        </div>
    }
</div>
<br />
<br />

<div>
    @Html.Partial("Index")
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css" />
    <script>
        $(document).ready(function () {
            $('#consultasTable').DataTable({
                "paging": true,
                "pageLength": 10,
                "lengthChange": false,
                "searching": false,
                "info": false,
            });
        });
    </script>
}