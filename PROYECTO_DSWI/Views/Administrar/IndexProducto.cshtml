@model IEnumerable<PROYECTO_DSWI.Models.PRODUCTO>

@{
    ViewBag.Title = "IndexProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-pzjw8z/o1PuM+1TL3QFt/DW3ey4L8pWvH+X5g5xTH5Ih0d7lgR6s2E2ejjzJQ4w+" crossorigin="anonymous" />
</head>
<div class="contenedor-navegador">
    <img src="~/Imagenes/Logos/listaProd.png" />
    <h3 class="mt-4 titulo">LISTA DE PRODUCTOS</h3>

</div>
<hr style="border: solid 1px black" />
<div class="contenedor-sec">

    <img src="~/Imagenes/Logos/agregarProd.png" /> @Html.ActionLink("Agregar Producto", "CreateProducto", null, new { @class = "btn btn-primary boton" })

</div>
<br />
<br />
<style>
    .contenedor-sec {
        margin-top: 30px;
    }

    .boton {
        background-color: #04b68a;
        border: white;
        font-family: 'Berlin Sans FB';
    }

        .boton:hover {
            background-color: black;
            border: white;
            font-family: 'Berlin Sans FB';
        }

    .btnEditar {
        background-color: #344c8b;
        font-family: 'Berlin Sans FB';
        color: white;
        border: black 3px;
    }

        .btnEditar:hover {
            background-color: #2c8eed;
            font-family: 'Berlin Sans FB';
            color: white;
            border: white;
        }

    .btnEliminar {
        color: white;
        background-color: #b23430;
        border: white;
        font-family: 'Berlin Sans FB';
    }

        .btnEliminar:hover {
            background-color: red;
            border: white;
            font-family: 'Berlin Sans FB';
        }

    .contenedor-navegador img {
        width: 40px;
        height: 40px;
        margin-top: 30px;
        margin-right: 10px;
    }

    .contenedor-navegador {
        display: flex;
    }

    .titulo {
        padding-top: 5px;
        padding-bottom: 10px;
        color: black;
        font-size: 30px;
        text-align: left;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    th, tr, td, tbody, .teibol {
        border: black 2px;
    }

    .encabezado {
        background-color: cadetblue;
        text-align: center;
        color: white;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    .detalle {
        font-family: 'Lucida Calligraphy';
    }

    .detalle {
        text-align: center;
    }

    table {
        border-collapse: separate;
        border-spacing: 10;
        border: solid black 1px;
        border-radius: 10px;
        -moz-border-radius: 10px;
        -webkit-border-radius: 5px;
    }
</style>

<div class="tablon">

    <table class="table table-striped table-bordered " style="width: 100%;" id="tableProductos">
        <thead class="encabezado text-center">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>

        <tbody class="detalle">
            @foreach (var item in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(modelItem => item.IdProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdMarca)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdCategoria)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td class="text-center" style="width: 20%">
                        @Html.ActionLink(" ", "EditProducto", new { codigo = item.IdProducto }, new { @class = "btn btn-primary btnEditar bi bi-pencil-square" }) |
                        @Html.ActionLink(" ", "DeleteProducto", new { id = item.IdProducto }, new { @class = "btn btn-primary btnEliminar bi bi-trash3-fill" })
                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css" />
    <script>
        $(document).ready(function () {
            $('#tableProductos').DataTable({
                "paging": true,
                "pageLength": 10,
                "lengthChange": false,
                "searching": false,
                "info": false,
            });
        });
    </script>
}